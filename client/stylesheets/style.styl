
toolLevel = 10px
buttonSize = 42px
canvasLevel = 0px



*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -o-user-select: none;
  user-select: none;


a
  color white

h1
  position absolute
  width buttonSize
  top 0.5em
  left 0.5em

.navigation
  position absolute
  z-index 1000
  top 80px
  right 0px

  a
    margin-right 1em
    font-size 15pt

a.touching
  background-color #DDD


#container
  margin 4em
h1
  font-size 18pt

ul li
  margin-bottom 1em
  font-size 16pt
  a
    text-transform uppercase


div.loading
  opacity 0.8
  position absolute
  z-index 100
  width 100%
  top 8em
  margin-left 10em
  text-align center
  p
    width 5em
    border 10px solid black
    border-radius 5px
    font-size 80pt
    background-color white


canvas
  position absolute
  cursor crosshair
  display block
  top 0px
  left 0px

canvas.main
  // background-image url(http://placekitten.com/1000/600)
  background-color white

canvas.whiteboard
  z-index 1

canvas.buffer
  z-index 2



.tool_settings
  button
    display block
    width buttonSize
    height buttonSize
    margin-bottom 10px
    background-color #DDD
    border-radius 5px
    border 2px solid #DDD
    font-size 8pt
    text-align left

  button.touching
    border 2px solid green

  .size
    button
      display inline
      width (buttonSize / 2)
    input
      border 1px solid black
      width 25px

  .left
    z-index 50
    position fixed
    top toolLevel + buttonSize + 16px
    left toolLevel

  .top
    position fixed
    z-index 50
    top toolLevel
    left 6em

    button
      display inline !important
      margin-left 1em

  .selected
    box-shadow 0px 0px 20px white
    border 2px solid black !important
    border-radius 5px

.status
  position fixed
  font-size 8pt
  color black
  bottom 10px
  left 10px
  font-family monospace
  z-index 50
  .name
    font-weight bold
    margin-right 4px

canvas.loading
  top -200%
