canvas.main
  background-image url(http://placekitten.com/1000/600)

canvas.whiteboard
  z-index 1

canvas.sketch
  z-index 2


size = 60px

.tool_settings
  .size, button
    width size
    height size
    margin-bottom 10px

  button
    display block

.status
  position absolute
  top 10px
  right 10px
  font-family monospace
  .name
    font-weight bold
    margin-right 4px
