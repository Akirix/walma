
buttonSize = 4.5em



*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -o-user-select: none;
  user-select: none;


a
  color white

h1
  position absolute
  width buttonSize
  top 0.5em
  left 0.5em


a.touching
  background-color #DDD


#container
  margin 4em
h1
  font-size 18pt

ul li
  margin-bottom 1em
  font-size 16pt
  a
    text-transform uppercase


div.loading
  opacity 0.8
  position fixed
  z-index 100
  width 100%
  top 8em
  margin-left 10em
  text-align center
  p
    width 5em
    border 10px solid black
    border-radius 5px
    font-size 80pt
    background-color white


canvas
  position absolute
  cursor crosshair
  display block
  top 0px
  left 0px

canvas.main
  // background-image url(http://placekitten.com/1000/600)
  background-color white
  background-repeat no-repeat !important

canvas.whiteboard
  z-index 1

canvas.localBuffer
  z-index 2


.status
  position fixed
  font-size 8pt
  color black
  bottom 10px
  left 10px
  font-family monospace
  z-index 50
  .name
    font-weight bold
    margin-right 4px




canvas.loading
  top -200%

.toolSettings
  position fixed
  top 0px
  left 0px

  overflow none
  display block


  z-index 50
  .options
    display none
    height buttonSize
    overflow hidden
  button.selected
    border 3px inset
  button
    margin 0.5em
    width buttonSize
    height buttonSize
    cursor pointer
    border-radius 0.5em
    border 3px outset



  .clear
    clear both
  button.toggle
    display block


  .options,.toggle
    float left


.bg-size
  top 0
  left 0
  position absolute
  width 300px
  height 200px

