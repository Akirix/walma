
buttonSize = 4.5em

body
  font-family arial


.status, toolSettings
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -o-user-select: none;
  user-select: none;


a
  color white

h1
  position absolute
  width buttonSize
  top 0.5em
  left 0.5em


a.touching
  background-color #DDD


#container
  margin 4em
h1
  font-size 18pt

ul li
  margin-bottom 1em
  font-size 16pt
  a
    text-transform uppercase


div.loading
  opacity 0.8
  position fixed
  z-index 100
  width 100%
  top 8em
  margin-left 10em
  text-align center
  p
    width 5em
    border 10px solid black
    border-radius 5px
    font-size 80pt
    background-color white


canvas
  display block


.whiteboard
  position absolute
  overflow hidden
  color transparent
  top 0px
  left 0px
  background-color #DDD

  canvas
    position absolute
    background-repeat no-repeat

    border-style dotted
    border-color black
    border-bottom-width 1px
    border-right-width 1px

  canvas.localBuffer
    z-index 12
  canvas.remoteBuffer
    z-index 11
  canvas.main
    z-index 10
    background-color white

  .bg-size
    z-index 9



.status
  position fixed
  font-size 8pt
  color black
  bottom 10px
  left 10px
  font-family monospace
  z-index 50
  .name
    font-weight bold
    margin-right 4px




canvas.loading
  top -200%

.lightbox
  display none
  position fixed
  width 100%
  left 0px
  right 0px
  z-index 500
  .wrapper
    padding 2em
    margin-left auto
    margin-right auto
    width 50%
    background-color white
    border-radius 10px
    box-shadow 0px 5px 20px 4px black
    display block

  .close
    a
      color black
    text-align right

  .imageWrapper, .linkBox
      margin 1em

  .linkBox input
      margin-left 1em
      width 240pt

  .imageWrapper
    img
      width 300px
      border 3px solid black
      border-radius 2px




.toolSettings
  z-index 500
  position fixed

  top 0px
  left 0px

  overflow none
  display block


  z-index 50
  .options
    display none
    height buttonSize
    overflow hidden
  button.selected
    border 3px inset
  button
    margin 0.5em
    width buttonSize
    height buttonSize
    cursor pointer
    border-radius 0.5em
    border 3px outset



  .clear
    clear both
  button.toggle
    display block


  .options,.toggle
    float left


.bg-size
  top 0
  left 0
  position absolute
  width 300px
  height 200px



.menuContainer
  selectionColor = #DDD
  left 300px
  top 200px
  position absolute
  z-index 60

  .tabs
    height buttonSize

  button
    width buttonSize
    height buttonSize
    margin 10px
    cursor pointer

    background-color white
    border 0px solid black
    border-bottom-color selectionColor

    box-shadow 0px 0px 10px black
    border-radius 20px




  .buttonBorder, .dragArea
    float left
    border-radius 20px

  .sideButtonBorder
    position relative
    top 0.2em
    float left
    border-radius 20px
    width 1.5em
    height buttonSize
    border 2px solid #DDD
    cursor move
    background: #ffffff; /* Old browsers */
    background: -moz-linear-gradient(left, #ffffff 0%, #f1f1f1 33%, #e1e1e1 66%, #f6f6f6 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, right top, color-stop(0%,#ffffff), color-stop(33%,#f1f1f1), color-stop(66%,#e1e1e1), color-stop(100%,#f6f6f6)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(left, #ffffff 0%,#f1f1f1 33%,#e1e1e1 66%,#f6f6f6 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(left, #ffffff 0%,#f1f1f1 33%,#e1e1e1 66%,#f6f6f6 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(left, #ffffff 0%,#f1f1f1 33%,#e1e1e1 66%,#f6f6f6 100%); /* IE10+ */
    background: linear-gradient(left, #ffffff 0%,#f1f1f1 33%,#e1e1e1 66%,#f6f6f6 100%); /* W3C */




  .dragArea
    width buttonSize * 0.75
    height buttonSize * 0.75


  .openDown .tabs .buttonBorder
    border-bottom-left-radius 0px
    border-bottom-right-radius 0px

  .openUp .tabs .buttonBorder
    border-top-left-radius 0px
    border-top-right-radius 0px

  .selected
    background-color selectionColor

  .content
    display none
    background-color white
    .group
      clear both
      padding-left 1em
      padding-right 0.7em
      padding-top 0.3em
      .description
        margin 1em
        font-size 10pt

  .openDown .content, .openUp .content
    display block
    clear both
    border 8px solid selectionColor
    border-radius 5px

