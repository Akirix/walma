.selected
  box-shadow 5px 5px 10px #888
  border 4px solid black
  border-radius 5px


.home-link
  margin-left 5px
  font-size 7pt

canvas.loading
  opacity 0.5


canvas
  position absolute
  top 100px
  left 100px
  cursor crosshair

  display block
