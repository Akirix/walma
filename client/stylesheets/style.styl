
toolLevel = 20px
canvasLevel = toolLevel + 90px
buttonSize = 80px



*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

h1
  position absolute
  width buttonSize
  top 0.5em
  left 0.5em

.navigation
  position absolute
  z-index 1000
  top 80px
  right 0px

  a
    margin-right 1em
    font-size 15pt

a.touching
  background-color #DDD

#container
  margin 4em
h1
  font-size 18pt

ul li
  margin-bottom 1em
  font-size 16pt
  a
    text-transform uppercase

.loading
  opacity 0.8
  position absolute
  z-index 100
  width 100%
  top 8em
  margin-left 10em
  text-align center
  p
    width 5em
    border 10px solid black
    border-radius 5px
    font-size 80pt
    background-color white


canvas
  position absolute
  top canvasLevel
  left 100px
  cursor crosshair
  display block

canvas.main
  background-image url(http://placekitten.com/1000/600)

canvas.whiteboard
  z-index 1

canvas.sketch
  z-index 2




.tool_settings
  button
    display block
    width buttonSize
    height buttonSize
    margin-bottom 10px

  button.touching
    border 4px solid green

  .size button
    display inline
    width (buttonSize / 2)

  .selected
    box-shadow 5px 5px 10px #888
    border 4px solid black
    border-radius 5px

  .left
    position absolute
    top toolLevel + buttonSize + 16px
    left 8px

  .top
    position absolute
    top toolLevel
    left 6em

    button
      margin-left 1em
      display inline !important


.status
  position absolute
  top 10px
  right 10px
  font-family monospace
  .name
    font-weight bold
    margin-right 4px
