

script.status-template(type="x-handlebars-template")
  .attr
    span.name Status:
    span.value  {{status}}
  .attr
    span.name Loaded:
    span.value  {{drawnFromHistory}} / {{inHistory}} ops in {{historyDrawTime}}s
  .attr
    span.name Speed:
    span.value {{speed}} ops/s
  .attr
    span.name Operations drawn:
    span.value  {{operationCount}}


h1

.status



