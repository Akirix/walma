script.image-template(type="x-handlebars-template")

  .imageWrapper
    | {{#if published }}
    h3 Published drawing
    img.publishedImg(src="{{publishedImageURL}}", alt="")
    | {{/if}}
    h3 Current drawing
    .buttonWrapper
      img.currentImg(src="{{currentImageDataURL}}", alt="")
    button.publish Publish

  .linkBox
    | {{#if published }}
    span Link for this image:
    input(type="text", value="{{publishedImageURL}}")
    | {{/if}}


